<Window x:Class="GoogleFormsCsvToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleFormsCsvToPdf"
        mc:Ignorable="d"
        Title="Convert Google Forms CSV to PDF" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" MinWidth="500">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="20 20 20 0">
            <Button Height="25" Width="60" Click="Open_Click">Open</Button>
            <Label Name="OpenLabel" Margin="20 0 0 0"></Label>
        </StackPanel>
        <Border BorderThickness="1" BorderBrush="Black" Margin="20 20"></Border>
        <StackPanel Orientation="Horizontal" Margin="20 0 20 20">
            <Button Name="ConvertButton" Height="25" Width="60" IsEnabled="False" Click="Convert_Click">Convert</Button>
        </StackPanel>
    </StackPanel>
</Window>
